<?xml version="1.0"?>
<robot name="platform">

  <!-- Base link -->
  <link name="platform_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="platform.obj" scale="0.7333333 0.7333333 0.7333333"/>
      </geometry>
      <material name="platform_material">
        <color rgba="0.7 0.5 0.3 0.5"/>
      </material>
    </visual>

    <collision name="platform">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="platform.obj" scale="0.7333333 0.7333333 0.7333333"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1000.0"/>
      <inertia ixx="1000.0" ixy="0.0" ixz="0.0" iyy="1000.0" iyz="0.0" izz="1000.0"/>
    </inertial>
  </link>

  <!-- Fixed joint to world -->
  <joint name="world_to_base" type="fixed">
    <parent link="world"/>
    <child link="platform_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

</robot>
